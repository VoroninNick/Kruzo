.form_wrap
    padding:
        top: 5px
        bottom: 5px
    border:
        top: 1px dashed #EE4632
        bottom: 1px dashed #EE4632
    margin:
        top: 50px
    .form_inner
        background: #EE4632
        p
            width: 90%
            margin: 0 auto
            font:
                size: 17px
                family: 'SegoeScript-Regular', sans-serif !important
            color: #6E1112
        form
            width: 90%
            margin: 0 auto
            .accept_input
                padding:
                    top: 30px
                    bottom: 45px
            .input_field
                /*height: 70px*/
                margin:
                    top: 15px
                input
                    height: 47px
                    border: 1px solid #6e1112
                label
                    font:
                        size: 14px
                        family: 'Fira Sans', sans-serif
                        weight: 300
                    color: #6E1112
        .custom_header_wrap
            top: -46px
            margin-bottom: -35px
            &:before
                background: #6E1112
                top: -5%
            .custom_header
                color: #ffffff
                line-height: 23px
                display: inline-block
                +rotate(-4.5deg)
                span
                    line-height: 29px
                    display: inline-block

    &.order_on_web_site_wrap
        .custom_header_wrap
            margin:
                bottom: -15px !important
            &:before
                top: -17% !important
                right: 29% !important
            .custom_header
                top: 8px !important
                /*span*/
                    /*white-space: nowrap*/

    &.order_product_wrap
        .custom_header_wrap
            margin:
                bottom: -20px !important
            .custom_header
                top: 8px !important
                span
                    white-space: nowrap

    &.add_question_wrap
        .custom_header_wrap
            margin:
                bottom: -20px !important
            &:before
                top: -17%
                right: 29%
            .custom_header
                top: 8px !important
                span
                    white-space: nowrap



